/*Given a smaller strings and a bigger string b, design an algorithm to find all permutations
of the shorter string within the longer one. Print the location of each permutation. */

#include <iostream>
using namespace std;

int main() {
char s[4]= "abc";
char b[24]= "cba,aaa,bac,bbb,ccc,abc";
int match = 0, counter = 0, i=0;

for (i=0; i<=23; i++){
	for(int j=0; j<=3; j++){
		if((b[i] == s[j]) && (b[i]!=b[i+1])){
			match=1; break;
		}	
		else
			match=0;
	}	
	
	if(match==1)
		counter++;
	else
		counter =0;

	if(counter == 3){
		counter =0;
		cout<<"Match at:"<<(i-2)<<"->";
		for(int x = i-2; x <= i; x++)
			cout<<b[x];
		cout<<endl;
	}
}
	return 0;
}
