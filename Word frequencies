#include <stdio.h>
#include <string.h>
int main(void) {
	char book[100] = "My book is about healty food. It is not a big books.";
	char word[10] = "is";
	int counter = 0, i = 0, j = 0;
	int chr = 0;
	
	//check how many characters has the word
	while (word[i++])
		chr++;
	printf("The word \"%s\" has %d characters.\n",word, chr);
	i = 0;
	int c = chr;
	
	while (book[j]){
		
		if(word[i] == book[j]){
			printf("found %c at position %d\n", word[i++], j++);
			--c;
			if (word[i] == '\0' && c == 0){
				counter++;
				i = 0;
				c = chr;
			}
		}
		else{
			j++;
			c = chr;
		}
	}
	printf("Found \"%s\" %d times", word, counter);
	
	return 0;
}
